#!/bin/bash
### BEGIN INIT INFO
# Provides:          <%= @app_name %>
# Required-Start:
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Slim Mail Transfer Agent
# Description:       Serves as a mail transfer agent for the system based on
#                    the configuration in place.
### END INIT INFO

. /lib/lsb/init-functions

# Service name (for display)
NAME=<%= @app_name %>
# Path to the daemon
DAEMON=<%= @executable %>
# PID file for this instance of the daemon
PIDFILE=/var/run/<%= @app_name %>.pid
# Config file for the service
CONFIGFILE=<%= @app_cfg_file %>

function start {
    log_daemon_msg "Starting $NAME"
    start_daemon -p $PIDFILE $DAEMON --daemon \
        --config $CONFIGFILE \
        --pid-file $PIDFILE
    log_end_msg $?
}

function stop {
    log_daemon_msg "Stopping $NAME"
    killproc -p $PIDFILE $DAEMON
    log_end_msg $?
}

function reload {
    log_daemon_msg "Reloading $NAME"
    killproc -p $PIDFILE $DAEMON -HUP
    log_end_msg $?
}

function status {
    status_of_proc -p $PIDFILE $DAEMON $NAME && exit 0 || exit $?
}

case $1 in
    start)
        start
        ;;

    stop)
        stop
        ;;

    restart)
        stop
        start
        ;;

    reload)
        reload
        ;;

    status)
        status
        ;;

    *)
        echo "Usage: $0 {start|stop|restart|reload|status}"
        exit 2
        ;;
esac

